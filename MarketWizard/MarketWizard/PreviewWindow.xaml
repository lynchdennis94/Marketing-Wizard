<Window x:Class="MarketWizard.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview Email" Height="630" Width="861">
    <Grid x:Name="mainBackground" Background="#FF7295F3">
        <TextBox x:Name="subjectTextBox" HorizontalAlignment="Left" Height="29" Margin="39,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="759"/>
        <Label x:Name="subjectLabel" Content="Subject:" HorizontalAlignment="Left" Margin="39,17,0,0" VerticalAlignment="Top" Width="86"/>
        <TextBlock x:Name="bodyTextBlock" HorizontalAlignment="Left" Height="417" Margin="39,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="759" Background="#FFFDFBFB"/>
        <Label x:Name="bodyLabel" Content="Body:" HorizontalAlignment="Left" Margin="39,82,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonSend" Content="Send" HorizontalAlignment="Left" Margin="256,555,0,0" VerticalAlignment="Top" Width="86" Height="34" IsEnabled="False"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="506,555,0,0" VerticalAlignment="Top" Width="86" Height="34" Click="buttonCancel_Click"/>

    </Grid>
</Window>
